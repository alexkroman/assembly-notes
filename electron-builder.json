{
  "appId": "com.alexkroman.assembly-notes",
  "productName": "Assembly-Notes",
  "artifactName": "Assembly-Notes-${os}-${arch}.${ext}",
  "forceCodeSigning": false,
  "publish": {
    "provider": "github"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": ["dist/**/*", "!dist/**/*.map"],
  "asarUnpack": [
    "node_modules/electron-audio-loopback/**/*",
    "node_modules/better-sqlite3/**/*",
    "node_modules/@jitsi/robotjs/**/*",
    "node_modules/**/*.node",
    "**/*.node"
  ],
  "extraMetadata": {
    "main": "dist/main/main.js"
  },
  "npmRebuild": true,
  "buildDependenciesFromSource": true,
  "nativeRebuilder": "sequential",
  "asar": true,
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64", "x64"]
      },
      {
        "target": "zip",
        "arch": ["arm64", "x64"]
      }
    ],
    "icon": "build/icons/mac/icon.icns",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "notarize": false
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "zip",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icons/win/icon.ico",
    "forceCodeSigning": false,
    "publish": null
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "build/icons/png",
    "category": "Office",
    "synopsis": "Real-time transcription and meeting notes",
    "description": "Assembly-Notes provides real-time transcription of microphone and system audio with AI-generated meeting summaries.",
    "executableName": "assembly-notes",
    "desktop": {
      "entry": {
        "Name": "Assembly Notes",
        "Comment": "Real-time transcription and meeting notes",
        "Categories": "Office;AudioVideo;",
        "Terminal": "false",
        "Type": "Application",
        "StartupNotify": "true"
      }
    },
    "maintainer": "Alex Kroman <alex@alexkroman.com>",
    "vendor": "Alex Kroman"
  },
  "deb": {
    "depends": [
      "libgtk-3-0",
      "libnotify4",
      "libnss3",
      "libxss1",
      "libxtst6",
      "xdg-utils",
      "libatspi2.0-0",
      "libuuid1",
      "libsecret-1-0",
      "libx11-6",
      "libxext6",
      "libxinerama1",
      "libxi6",
      "libxrandr2",
      "libxcursor1",
      "libxcomposite1",
      "libxdamage1",
      "libxfixes3",
      "libxrender1",
      "libxkbfile1"
    ],
    "afterInstall": "./build/linux/after-install.sh",
    "afterRemove": "./build/linux/after-remove.sh"
  }
}
