# Environment variables for testing GitHub Actions locally with act
# Copy this to .env.act.local and fill in your values

# GitHub token (for actions that need it)
GITHUB_TOKEN=your_github_personal_access_token

# Personal Access Token (for branch protection workflow)
# Needs repo permissions for branch protection
PAT_TOKEN=your_github_personal_access_token_with_repo_permissions

# Apple notarization credentials (for release workflow)
APPLE_ID=your_apple_id@example.com
APPLE_APP_SPECIFIC_PASSWORD=your_app_specific_password
APPLE_TEAM_ID=your_team_id

# Code signing (optional)
CSC_LINK=base64_encoded_certificate
CSC_KEY_PASSWORD=certificate_password