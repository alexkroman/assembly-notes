# Assembly Notes Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Slack Integration (Optional)
# =============================================================================
# Slack credentials are now configured through the Settings UI in the app.
# Users should create their own Slack app at https://api.slack.com/apps

# =============================================================================
# Development Options
# =============================================================================
# Use development database (creates separate database for development)
DEV_MODE=true

# Start with fresh state (creates timestamped database)
FRESH_MODE=false
FRESH_ID=

# Node environment
NODE_ENV=development

# Build target for Vite (used internally by build scripts)
BUILD_TARGET=

# =============================================================================
# macOS Code Signing & Notarization (for macOS builds)
# =============================================================================
# Apple Developer credentials for notarization
APPLE_ID=your_apple_id@example.com
APPLE_APP_SPECIFIC_PASSWORD=your_16_character_app_password
APPLE_TEAM_ID=your_10_character_team_id

# Code signing certificate (optional - can use Developer ID from Keychain instead)
CSC_LINK=path/to/certificate.p12
CSC_KEY_PASSWORD=certificate_password

# =============================================================================
# CI/CD Options
# =============================================================================
# Set to true when running in CI environment
CI=false

# Display server for Linux CI environments
DISPLAY=:99

# =============================================================================
# Build Options
# =============================================================================
# Electron rebuild options
ELECTRON_REBUILD_FORCE=false

# Skip native module rebuilding (for faster builds)
SKIP_NATIVE_REBUILD=false

# =============================================================================
# Error Tracking (Optional)
# =============================================================================
# Sentry DSN for error tracking (leave empty to disable)
# Get your DSN from https://sentry.io/
SENTRY_DSN=